{
  "name": "@0xcert/web3-xcert-contracts",
  "description": "Xcert token implementation for the 0xcert protocol.",
  "version": "0.0.0-alpha1",
  "scripts": {
    "build": "npx specron compile",
    "sandbox": "npx specron sandbox",
    "prepare": "npm run build",
    "test": "rm -rf build && npx specron compile && npx specron test"
  },
  "specron": {
    "compiler": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ]
    },
    "test": {
      "port": 8506,
      "match": [
        "./src/tests/**/*.test.ts"
      ]
    },
    "require": [
      "ts-node/register"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@0xcert/web3-utils-contracts": "0.0.0-alpha1",
    "@0xcert/web3-erc721-contracts": "0.0.0-alpha1",
    "@specron/cli": "^0.3.0",
    "@specron/spec": "^0.3.0",
    "solc": "^0.4.25",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.1",
    "web3": "^1.0.0-beta.36"
  }
}
