{
  "name": "@0xcert/web3-sandbox",
  "version": "0.0.0-alpha0",
  "description": "Web3 provider sandbox environment",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -Rf ./dist",
    "build": "npm run clean; npx tsc",
    "lint": "npx tslint 'src/**/*.ts?(x)'",
    "prepare": "npm run build",
    "test": "npx nyc npx hayspec test"
  },
  "hayspec": {
    "require": [
      "ts-node/register"
    ],
    "match": [
      "./src/tests/**/*.test.ts"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "author": "Kristijan Sedlak (Xpepermint)",
  "license": "MIT",
  "devDependencies": {
    "@hayspec/cli": "^0.7.6",
    "@hayspec/spec": "^0.7.6",
    "@types/node": "^10.11.4",
    "ganache-cli": "^6.1.8",
    "nyc": "^13.0.1",
    "supertest": "^3.3.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1",
    "web3": "^1.0.0-beta.36"
  },
  "dependencies": {
    "@0xcert/web3-dex": "0.0.0-alpha0",
    "@0xcert/web3-dxm": "0.0.0-alpha0",
    "@0xcert/web3-erc20": "0.0.0-alpha0",
    "@0xcert/web3-erc721": "0.0.0-alpha0",
    "@0xcert/web3-proxy": "0.0.0-alpha0",
    "@0xcert/web3-xcert": "0.0.0-alpha0",
    "@0xcert/web3-zxc": "0.0.0-alpha0"
  }
}
