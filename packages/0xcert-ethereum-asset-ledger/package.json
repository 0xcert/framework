{
  "name": "@0xcert/ethereum-asset-ledger",
  "version": "2.0.3",
  "description": "Asset ledger module for asset management on the Ethereum blockchain.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npx tsc",
    "clean": "rm -Rf ./dist",
    "lint": "npx eslint 'src/**/*.ts?(x)'",
    "test": "npm run lint && npx nyc npx specron test"
  },
  "specron": {
    "test": {
      "port": 8513,
      "match": [
        "./src/tests/**/*.test.ts"
      ]
    },
    "require": [
      "ts-node/register"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "src/tests"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xcert/framework.git"
  },
  "bugs": {
    "url": "https://github.com/0xcert/framework/issues"
  },
  "homepage": "https://github.com/0xcert/framework#readme",
  "keywords": [
    "0xcert",
    "framework",
    "protocol",
    "asset",
    "value",
    "values",
    "currency",
    "token",
    "non-fungible",
    "fungible",
    "erc-721",
    "erc-20",
    "blockchain",
    "javascript",
    "typescript",
    "nodejs",
    "vuejs",
    "nuxtjs",
    "npm",
    "libraries",
    "smart-contract",
    "ethereum",
    "zxc"
  ],
  "license": "MIT",
  "devDependencies": {
    "@specron/cli": "0.17.1",
    "@specron/spec": "0.17.1",
    "@0xcert/ethereum-sandbox": "2.0.3",
    "@0xcert/ethereum-xcert-contracts": "2.0.3",
    "nyc": "15.1.0",
    "solc": "0.6.1",
    "ts-node": "9.0.0",
    "@typescript-eslint/eslint-plugin": "4.6.1",
    "@typescript-eslint/parser": "4.6.1",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "30.7.7",
    "eslint-plugin-unicorn": "23.0.0",
    "eslint": "7.12.1",
    "typescript": "4.0.5",
    "web3": "1.3.0"
  },
  "dependencies": {
    "@0xcert/ethereum-generic-provider": "2.0.3",
    "@0xcert/ethereum-utils": "2.0.3",
    "@0xcert/scaffold": "2.0.3",
    "@0xcert/utils": "2.0.3"
  }
}
