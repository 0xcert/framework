{
  "name": "@0xcert/ethereum-xcert-contracts",
  "description": "Smart contracts used by the Asset ledger on the Ethereum blockchain.",
  "version": "2.0.2",
  "scripts": {
    "build": "npm run clean && npx specron compile && npx tsc",
    "build:wanchain": "specron compile --evmVersion byzantium --build ./build/wanchain",
    "clean": "rm -Rf ./build",
    "lint": "npx eslint 'src/**/*.ts?(x)' && npx solhint 'src/contracts/**/*.sol'",
    "sandbox": "npx specron sandbox",
    "test": "npm run lint && npm run clean && npx specron compile && npx specron test"
  },
  "specron": {
    "compiler": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ]
    },
    "flattener": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ],
      "severities": [
        "error",
        "warning"
      ]
    },
    "test": {
      "port": 8506,
      "match": [
        "./src/tests/**/*.test.ts"
      ]
    },
    "require": [
      "ts-node/register"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xcert/framework.git"
  },
  "bugs": {
    "url": "https://github.com/0xcert/framework/issues"
  },
  "homepage": "https://github.com/0xcert/framework#readme",
  "keywords": [
    "0xcert",
    "framework",
    "protocol",
    "asset",
    "value",
    "values",
    "currency",
    "token",
    "non-fungible",
    "fungible",
    "erc-721",
    "erc-20",
    "blockchain",
    "javascript",
    "typescript",
    "nodejs",
    "vuejs",
    "nuxtjs",
    "npm",
    "libraries",
    "smart-contract",
    "ethereum",
    "zxc"
  ],
  "license": "MIT",
  "devDependencies": {
    "@specron/cli": "0.17.1",
    "@specron/spec": "0.17.1",
    "@specron/flattener": "0.17.1",
    "@0xcert/ethereum-erc20-contracts": "2.0.2",
    "@0xcert/ethereum-utils-contracts": "2.0.2",
    "@0xcert/ethereum-erc721-contracts": "2.0.2",
    "solc": "0.6.1",
    "solhint": "2.3.1",
    "ts-node": "8.10.1",
    "@typescript-eslint/eslint-plugin": "2.34.0",
    "@typescript-eslint/parser": "2.34.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-jsdoc": "25.4.2",
    "eslint-plugin-unicorn": "20.0.0",
    "eslint": "7.0.0",
    "typescript": "3.8.3",
    "web3": "1.2.7"
  }
}
