{
  "name": "@0xcert/web3-utils",
  "description": "Common utilities.",
  "version": "0.0.0-alpha0",
  "scripts": {
    "build": "npx specron compile",
    "sandbox": "npx specron sandbox",
    "test": "rm -rf build && npx specron compile && npx specron test"
  },
  "specron": {
    "compiler": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ]
    },
    "test": {
      "match": [
        "./src/tests/**/*.test.ts"
      ]
    },
    "require": [
      "ts-node/register"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@specron/cli": "^0.2.5",
    "@specron/spec": "^0.2.5",
    "solc": "^0.4.25",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.1",
    "web3": "^1.0.0-beta.36"
  }
}
