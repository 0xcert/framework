{
  "name": "@0xcert/ethereum-order-gateway-contracts",
  "version": "0.0.0-alpha6",
  "description": "Decentralized exchange implementation for 0xcert protocol",
  "scripts": {
    "clean": "rm -Rf ./dist",
    "build": "npm run clean && npx specron compile",
    "sandbox": "npx specron sandbox",
    "test": "rm -rf build && npx specron compile && npx specron test"
  },
  "specron": {
    "compiler": {
      "build": "./build",
      "match": [
        "./src/**/*.sol"
      ]
    },
    "test": {
      "port": 8501,
      "match": [
        "./src/tests/**/*.test.ts"
      ]
    },
    "require": [
      "ts-node/register"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@0xcert/ethereum-utils-contracts": "0.0.0-alpha6",
    "@0xcert/ethereum-erc20-contracts": "0.0.0-alpha6",
    "@0xcert/ethereum-erc721-contracts": "0.0.0-alpha6",
    "@0xcert/ethereum-xcert-contracts": "0.0.0-alpha6",
    "@0xcert/ethereum-proxy-contracts": "0.0.0-alpha6",
    "@specron/cli": "^0.5.0",
    "@specron/spec": "^0.5.0",
    "solc": "^0.5.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.1",
    "web3": "^1.0.0-beta.36"
  }
}
