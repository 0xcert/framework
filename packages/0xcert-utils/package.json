{
  "name": "@0xcert/utils",
  "version": "0.0.0-alpha2",
  "description": "Ethereum utils for 0xcert protocol.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rm -Rf ./dist",
    "build": "npm run clean && npx tsc",
    "test": "npx specron test"
